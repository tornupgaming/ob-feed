<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:OBFeed" x:Class="OBFeed.SplashPage">
	<RelativeLayout Padding="0">
		<!-- Background -->
		<Image Aspect="AspectFill" Source="background_a" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}" RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}">
		</Image>
		<StackLayout RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.3, Constant=32}" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}" VerticalOptions="Center" HorizontalOptions="Center">
			<Image Source="logo_white" />
			<BoxView HeightRequest="1" WidthRequest="175" Color="#f08100" HorizontalOptions="Start" />
			<Label Text="Feed Reader Test" TextColor="White" />
		</StackLayout>
	</RelativeLayout>
</ContentPage>